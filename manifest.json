{
  "manifest_version": 3,
  "name": "Say Congrats",
  "version": "1.1",
  "description": "Whatsapp Web extension - Auto Congrats Sending",
  "permissions": [],
  "action": {
    "default_popup": ""
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["languages/*"],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ]
}